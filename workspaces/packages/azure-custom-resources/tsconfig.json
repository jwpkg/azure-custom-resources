{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "lib",
    "rootDir": "src",
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "types": ["jest", "node"]
  },
  "lib": [
    "es2015",
    "dom"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "tests/**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}