{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "lib",
    "rootDir": "src",
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true
  },
  "lib": [
    "es2015",
    "dom"
  ],
  "include": [
    "**/*.ts"
  ]
}